@{
    ViewData["Title"] = "Home | Route Details";
}
    
<div class="row">
    <h2>Route Details</h2>
      <div class="col-6">
        <img src="~/img/buspoint.png" style="width:auto; height:auto;"/>
    </div>
    <div class="col-4">
        <hr />
        <label for="search" class="form-label">Search Bus</label>
        <input type="text" for="" class="form-control" placeholder="Search"/><br />
         <button type="submit" class="btn btn-success">Search</button>
        <form method="post">
            <div class="mb-3">

            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Vehicel Name</label>
                <input type="name" class="form-control" id="name" placeholder="Vehicel Name">
            </div>

            <div class="mb-3">
                <label for="vno" class="form-label" placeholder="Vehicel Number">Vehicle Number</label>
                <input type="number" class="form-control" id="vno" placeholder="Vehicel Number">
            </div>

                  <div class="mb-3">
                <label for="did" class="form-label" placeholder="Driver ID">Driver ID</label>
                <input type="number" class="form-control" id="did" placeholder="Driver ID">
            </div>

                <div class="mb-3">
                <label for="rno" class="form-label" placeholder="Route No">Route No</label>
                <input type="text" class="form-control" id="rno" placeholder="Route No">
            </div>
            <hr />
        </form>

    </div>
</div>